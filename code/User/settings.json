{
  "editor.fontSize": 18,
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontLigatures": true,
  "editor.wordWrap": "on",
  "editor.letterSpacing": 0.5,
  "editor.lineHeight": 48,
  "editor.tabSize": 2,
  "editor.mouseWheelZoom": false,
  "editor.minimap.enabled": false,
  "editor.matchBrackets": "near",
  "editor.cursorBlinking": "phase",
  "editor.foldingStrategy": "auto",
  "editor.renderControlCharacters": true,
  "editor.lineNumbers": "on",
  "editor.accessibilitySupport": "off",
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleDeclarations": "goto",
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabCompletion": "on",
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.linkedEditing": true,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "off",
    "strings": "on"
  },

  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true,
    "source.sortMembers": true
  },

  /**
   * Explorer
   **/
  "explorer.decorations.colors": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.visible": 1,
  "workbench.tree.indent": 16,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.labelFormat": "short",
  "workbench.colorTheme": "Nord",

  /**
   * Terminal
   **/
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.fontSize": 17,
  "terminal.integrated.letterSpacing": 1,
  "terminal.integrated.lineHeight": 1.4,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.allowChords": false,
  "terminal.explorerKind": "external",

  /**
   * Window
   **/
  "window.titleBarStyle": "custom",
  "window.closeWhenEmpty": true,

  /**
   * File
   **/
  "files.hotExit": "off",
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "files.autoSave": "onFocusChange",
  "files.exclude": {
    "vendor": false,
    ".github": false,
    "**/.git": true,
    ".ebextensions": true,
    ".phpintel": true,
    "resources": false,
    "public": false
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    // Hide everything in /public, except "index.php"
    "**/public/[abcdefghjklmnopqrstuvwxyz]*": true,
    "**/public/i[abcdefghijklmopqrstuvwxyz]*": true,
    // Hide everything in /vendor, except "laravel" folder.
    "**/vendor/[abcdefghijkmnopqrstuvwxyz]*": true,
    "**/vendor/l[bcdefghijklmnopqrstuvwxyz]*": true,
    "storage": true
  },
  "search.showLineNumbers": true,

  "[php]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },

  "[blade]": {
    "editor.defaultFormatter": "shufo.vscode-blade-formatter"
  },

  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",

  /**
   * Extensions settings
   **/
  "intelephense.diagnostics.undefinedTypes": false,
  "intelephense.diagnostics.undefinedMethods": false,
  "intelephense.diagnostics.undefinedFunctions": false,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact",
    "edge": "html"
  },

  "gitlens.menus": {
    "editorGroup": {
      "blame": false,
      "compare": false
    }
  },

  "auto-rename-tag.activationOnLanguage": ["*"],
  "scm.autoReveal": true,

  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.includeLanguages": {
    "plaintext": "js",
    "blade": "html"
  },
  "css.validate": false,

  "color-highlight.markerType": "dot-before",

  "phpserver.browser": "google-chrome",

  "prettier.semi": true,
  "prettier.singleQuote": true,
  "prettier.tabWidth": 2,

  "bladeFormatter.format.indentSize": 4,
  "bladeFormatter.format.wrapLineLength": 100,

  "namespaceResolver.showMessageOnStatusBar": true,
  "material-icon-theme.folders.theme": "classic",
  "intelephense.references.exclude": [
    "**/vendor/**",
    "/vendor/pestphp/pest/src/Functions.php"
  ],
  "files.associations": {
    "*.stub": "plaintext"
  },
  "terminal.external.osxExec": "Warp.app",
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font Mono",
  "git.openRepositoryInParentFolders": "never",
  "intelephense.completion.fullyQualifyGlobalConstantsAndFunctions": true,
  "material-icon-theme.folders.color": "#90a4ae",
  "alpine-intellisense.settings.languageScopes": "html",
  "explorer.confirmDelete": false,
  "workbench.preferredDarkColorTheme": "Aura Soft Dark",
  "window.autoDetectColorScheme": true,
  "workbench.iconTheme": "material-icon-theme",
  "redhat.telemetry.enabled": true,
  "workbench.activityBar.location": "hidden"
}
